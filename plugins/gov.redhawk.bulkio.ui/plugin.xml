<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="true"
            category="gov.redhawk.ui.category.sca"
            class="gov.redhawk.bulkio.ui.views.SriDataView"
            icon="icons/sri.gif"
            id="gov.redhawk.bulkio.ui.sridata.view"
            name="Sri Data View"
            restorable="false">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="gov.redhawk.ui.commands.category.sca"
            defaultHandler="gov.redhawk.bulkio.ui.handlers.GetSriHandler"
            id="gov.redhawk.bulkio.ui.getsri"
            name="Get SRI">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="true"
            locationURI="popup:org.eclipse.ui.popup.any?after=gov.redhawk.ui.views.monitor.command">
         <command
               commandId="gov.redhawk.bulkio.ui.getsri"
               label="Display SRI"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <adapt
                        type="gov.redhawk.model.sca.ScaUsesPort">
                     <test
                           forcePluginActivation="true"
                           property="gov.redhawk.bulkio.ui.sriSupported">
                     </test>
                  </adapt>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="true"
            locationURI="menu:gov.redhawk.ui.port.nxmplot.PlotView2?before=additions">
         <command
               commandId="gov.redhawk.bulkio.ui.getsri"
               label="Display SRI"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="gov.redhawk.ui.preferences"
            class="gov.redhawk.bulkio.ui.internal.BulkIOPreferencePage"
            id="gov.redhawk.bulkio.ui.preferences"
            name="BulkIO">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="gov.redhawk.bulkio.ui.internal.SriSupportPropertyTester"
            id="gov.redhawk.bulkio.ui.sri.supported"
            namespace="gov.redhawk.bulkio.ui"
            properties="sriSupported"
            type="java.lang.Object">
      </propertyTester>
   </extension>

</plugin>
