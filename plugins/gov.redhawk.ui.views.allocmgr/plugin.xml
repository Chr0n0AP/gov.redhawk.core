<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="true"
            category="gov.redhawk.ide.ui.category.sca_development"
            class="gov.redhawk.ui.views.allocmgr.AllocMgrView"
            id="gov.redhawk.ui.views.allocmgr.view"
            name="Allocation Manager"
            restorable="false">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="true"
            locationURI="popup:org.eclipse.ui.popup.any?after=group.control">
         <command
               commandId="gov.redhawk.ui.views.allocmgr.show"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     ifEmpty="false"
                     operator="and">
                  <test
                        property="gov.redhawk.sca.model.dommgr.connected"
                        value="true">
                  </test>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="true"
            locationURI="popup:gov.redhawk.ui.views.allocmgr.view?after=additions">
         <command
               commandId="gov.redhawk.ui.views.allocmgr.deallocate"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="gov.redhawk.ui.commands.category.sca"
            description="Shows the allocation manager"
            id="gov.redhawk.ui.views.allocmgr.show"
            name="Allocation Manager">
      </command>
      <command
            categoryId="gov.redhawk.ui.commands.category.sca"
            description="Deallocates the selected allocation"
            id="gov.redhawk.ui.views.allocmgr.deallocate"
            name="Deallocate">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="gov.redhawk.ui.views.allocmgr.handlers.ShowAllocMgrHandler"
            commandId="gov.redhawk.ui.views.allocmgr.show">
         <activeWhen>
            <and>
               <count
                     value="1">
               </count>
               <iterate>
                  <instanceof
                        value="gov.redhawk.model.sca.ScaDomainManager">
                  </instanceof>
               </iterate>
            </and>
         </activeWhen>
      </handler>
      <handler
            class="gov.redhawk.ui.views.allocmgr.handlers.DeallocateHandler"
            commandId="gov.redhawk.ui.views.allocmgr.deallocate">
         <enabledWhen>
            <iterate
                  ifEmpty="false"
                  operator="and">
               <instanceof
                     value="gov.redhawk.ui.views.allocmgr.AllocationStatus">
               </instanceof>
            </iterate>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertyContributor">
      <propertyContributor
            contributorId="gov.redhawk.ui.views.allocmgr.view"
            labelProvider="gov.redhawk.ui.views.allocmgr.properties.AllocMgrPropertiesTitleProvider">
         <propertyCategory
               category="gov.redhawk.ui.views.allocmgr.properties"></propertyCategory>
         <propertyCategory
               category="gov.redhawk.ui.views.allocmgr.advanced">
         </propertyCategory>
      </propertyContributor>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertyTabs">
      <propertyTabs
            contributorId="gov.redhawk.ui.views.allocmgr.view">
         <propertyTab
               category="gov.redhawk.ui.views.allocmgr.properties"
               id="gov.redhawk.ui.views.allocmgr.propertiestab"
               label="Properties">
         </propertyTab>
         <propertyTab
               category="gov.redhawk.ui.views.allocmgr.advanced"
               id="gov.redhawk.ui.views.allocmgr.advancedtab"
               label="Advanced">
         </propertyTab>
      </propertyTabs>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertySections">
      <propertySections
            contributorId="gov.redhawk.ui.views.allocmgr.view">
         <propertySection
               class="gov.redhawk.sca.ui.properties.ComponentPropertiesPropertySection"
               id="gov.redhawk.ui.views.allocmgr.propertiessection"
               tab="gov.redhawk.ui.views.allocmgr.propertiestab">
            <input
                  type="gov.redhawk.ui.views.allocmgr.AllocationStatus">
            </input>
         </propertySection>
         <propertySection
               class="org.eclipse.ui.views.properties.tabbed.AdvancedPropertySection"
               id="gov.redhawk.ui.views.allocmgr.advancedsection"
               tab="gov.redhawk.ui.views.allocmgr.advancedtab">
            <input
                  type="gov.redhawk.ui.views.allocmgr.AllocationStatus">
            </input>
         </propertySection>
      </propertySections>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="gov.redhawk.ui.views.allocmgr.AllocationStatus"
            class="gov.redhawk.ui.views.allocmgr.properties.AllocationStatusAdapter">
         <adapter
               type="gov.redhawk.model.sca.ScaPropertyContainer">
         </adapter>
      </factory>
   </extension>

   <extension point="org.eclipse.emf.ecore.generated_package">
      <!-- @generated AllocMgr -->
      <package
            uri="http://allocmgr.views.ui.redhawk.gov/allocmgr"
            class="gov.redhawk.ui.views.allocmgr.AllocMgrPackage"
            genModel="model/AllocMgr.genmodel"/>
   </extension>

   <extension point="org.eclipse.emf.edit.itemProviderAdapterFactories">
      <!-- @generated AllocMgr -->
      <factory
            uri="http://allocmgr.views.ui.redhawk.gov/allocmgr"
            class="gov.redhawk.ui.views.allocmgr.provider.AllocMgrItemProviderAdapterFactory"
            supportedTypes=
              "org.eclipse.emf.edit.provider.IEditingDomainItemProvider
               org.eclipse.emf.edit.provider.IStructuredItemContentProvider
               org.eclipse.emf.edit.provider.ITreeItemContentProvider
               org.eclipse.emf.edit.provider.IItemLabelProvider
               org.eclipse.emf.edit.provider.IItemPropertySource
               org.eclipse.emf.edit.provider.ITableItemLabelProvider"/>
   </extension>
</plugin>
